<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hospital_doctor_history_tree" model="ir.ui.view">
        <field name="name">hr_hospital.doctor.history.tree</field>
        <field name="model">hr_hospital.doctor.history</field>
        <field name="arch" type="xml">
            <tree string="_tree">
                <field name="change_date"/>
                <field name="doctor_id"/>
                <field name="patient_id"/>
            </tree>
        </field>
    </record>

    <record id="action_hospital_doctor_history" model="ir.actions.act_window">
        <field name="name">Doctors History</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr_hospital.doctor.history</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="hr_hospital_doctor_history_list_menu"
              name="Doctors History"
              parent="hr_hospital_doctor_catalog_menu"
              action="action_hospital_doctor_history"
              sequence="100"/>
</odoo>
